<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordSuccess"
    android:background="@color/white"
    android:padding="30dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_icon_back"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Password"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:fontFamily="@font/leaguespartan_bold"
            android:gravity="center"
            android:textAllCaps="true"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_icon_awesome_check_circle"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ganti password telah terikim, silahkan cek email anda"
            android:textColor="@color/black"
            android:fontFamily="@font/segoe_ui"
            android:textSize="16sp"
            android:textAlignment="center"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_button"
            android:fontFamily="@font/segoe_ui"
            android:shadowColor="@color/black"
            android:onClick="goToLogin"
            android:shadowDx="9"
            android:shadowDy="3"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"/>


    </LinearLayout>

</LinearLayout>